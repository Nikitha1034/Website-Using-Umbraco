@using Umbraco.Cms.Web.Common.PublishedModels
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Home>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels

<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h1>Services</h1>
                    <span class="st-border"></span>
                </div>
            </div>

            @foreach (var multipleServices in Model.Children<ContentModels.MultipleServices>())
            {
                foreach (var service in multipleServices.Children<ContentModels.Services>())
                {
                    var iconClass = service.Value<string>("serviceIcon");
                    var iconColor = service.Value<string>("iconColor");
                    <div class="col-md-4 col-sm-6 st-service">
                        <h2>
                            <i class="@iconClass" style="color:#@iconColor;"></i>
                            @service.ServiceName
                        </h2>
                        <p>@service.ServiceDescription</p>
                    </div>
                }
            }
        </div>
    </div>
</section>
